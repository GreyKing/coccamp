<!-- app/views/food_registrations/new.html.erb -->
<div class="min-h-[60vh] flex items-center justify-center">
  <div class="w-full max-w-lg bg-gray-800 p-8 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold mb-6 text-center">New Registration</h1>

    <%= form_with(model: @food_registration, local: true, html: { class: "space-y-5" }) do |f| %>
      <div>
        <%= f.label :name, class: "block text-sm font-medium text-gray-200" %>
        <%= f.text_field :name,
                         class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-200" %>
        <%= f.email_field :email,
                          class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
      </div>

      <div>
        <%= f.label :phone, class: "block text-sm font-medium text-gray-200" %>
        <%= f.telephone_field :phone,
                              class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
      </div>

      <div class="flex items-center space-x-2">
        <%= f.check_box :solo, class: "h-4 w-4 text-indigo-600 bg-gray-700 border-gray-600 rounded" %>
        <%= f.label :solo, "Attending Solo?", class: "text-gray-200" %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% [:planned_meals, :cooked_meals, :clean_up_meals, :eat_out_meals].each do |enum_field| %>
          <div>
            <%= f.label enum_field, enum_field.to_s.humanize, class: "block text-sm font-medium text-gray-200" %>
            <%= f.select enum_field, FoodRegistration.send(enum_field.to_s.pluralize).keys.map {|k| [k.humanize, k] },
                         {}, class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
          </div>
        <% end %>
      </div>

      <div>
        <%= f.label :meal_types, "Favorite Meal Type", class: "block text-sm font-medium text-gray-200" %>
        <%= f.select :meal_types, FoodRegistration.meal_types.keys.map {|k| [k.humanize, k] },
                     {}, class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
      </div>

      <div>
        <%= f.label :allergies_and_restrictions, class: "block text-sm font-medium text-gray-200" %>
        <%= f.text_area :allergies_and_restrictions,
                        rows: 3,
                        class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
      </div>

      <div>
        <%= f.label :special_requests, class: "block text-sm font-medium text-gray-200" %>
        <%= f.text_field :special_requests,
                         class: "mt-1 block w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md" %>
      </div>

      <div class="text-center">
        <%= f.submit "Register",
                     class: "mt-4 inline-flex justify-center px-6 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-md text-white font-semibold" %>
      </div>
    <% end %>
  </div>
</div>